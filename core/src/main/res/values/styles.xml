<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  TEXT STYLE  -->
    <style name="h1">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="h2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="h3">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="h4">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="title1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="title2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>


    <style name="subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="subtitle1_primary">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="subtitle2">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="subtitle3">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>
    <style name="subtitle3_grey">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <style name="dateTime">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:translationY">-1.4sp</item>
    </style>

    <style name="body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="caption1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="caption2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- TEXT INPUT LAYOUT -->

    <style name="myHintTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_300</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_corner_radius</item>
        <item name="hintTextAppearance">@style/myHintTextAppearance</item>
        <item name="boxStrokeColor">@color/textfield_color_selector</item>
    </style>

    <style name="MySpinnerLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_corner_radius</item>
        <item name="hintTextAppearance">@style/myHintTextAppearance</item>
        <item name="boxStrokeColor">@color/textfield_color_selector</item>
    </style>

    <!-- TEXT INPUT EDIT TEXT -->
    <style name="MyTextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <!-- TEXT INPUT EDIT TEXT -->
    <style name="MySpinnerTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <dimen name="text_input_corner_radius">8dp</dimen>
</resources>